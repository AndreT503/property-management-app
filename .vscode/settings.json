{
  "editor.tabSize": 2,
  "editor.rulers": [90],
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onFocusChange",
  "editor.cursorBlinking": "solid",
  "workbench.iconTheme": "material-icon-theme",
  "git.enableSmartCommit": true,
  "editor.autoIndent": true,
  "debug.openExplorerOnEnd": true,

  "explorer.openEditors.visible": 0,
  "editor.minimap.enabled": false,
  "html.autoClosingTags": false,
  "git.confirmSync": false,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,

  "prettier.disableLanguages": ["html"],
  "workbench.colorCustomizations": {
    "liveServer.settings.port": 5002,
    "liveServer.settings.CustomBrowser": "chrome",
    "liveServer.settings.AdvanceCustomBrowserCmdLine": "chrome --incognito --remote-debugging-port=9222",
    "liveServer.settings.NoBrowser": false,
    "liveServer.settings.ignoreFiles": [
      ".vscode/**",
      "**/*.scss",
      "**/*.sass"
    ],
    "activityBar.background": "#f0e0a7",
    "activityBar.activeBorder": "#1ca386",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#1ca386",
    "activityBarBadge.foreground": "#e7e7e7",
    "titleBar.activeBackground": "#e8d07c",
    "titleBar.inactiveBackground": "#e8d07c99",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveForeground": "#15202b99",
    "statusBar.background": "#e8d07c",
    "statusBarItem.hoverBackground": "#e0c051",
    "statusBar.foreground": "#15202b",
    "activityBar.activeBackground": "#f0e0a7",
    "editorGroup.border": "#f0e0a7",
    "panel.border": "#f0e0a7",
    "sash.hoverBorder": "#f0e0a7",
    "sideBar.border": "#f0e0a7",
    "statusBarItem.remoteBackground": "#e8d07c",
    "statusBarItem.remoteForeground": "#15202b"
  },
  "peacock.color": "#e8d07c"
}
